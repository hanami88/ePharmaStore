{{#if message}}
  <div class="datthanhcong active">
    <div class="datthanhcong-container">
      <i class="fa-solid fa-check checker"></i>
      <div>{{message}}</div>
    </div>
  </div>
  <script>
    const datthanhcong = document.querySelector(".datthanhcong"); setTimeout(()
    => { datthanhcong.classList.remove("active"); }, 1500);
  </script>
{{/if}}
<div class="xoadc">
  <div class="thongbaochacchan tbcc">
    <h1>Xoá địa chỉ
    </h1>
    <div>Bạn có chắc chắn muốn xóa địa chỉ này?
    </div>
    <button class="thongbao-quaylai qlai">Quay lại</button>
    <button class="thongbao-tieptuc tt">Đồng ý</button>
  </div>
</div>
<div class="container-themdiachi">
  <div class="themdiachi">
    <div class="text-themdiachi">Địa chỉ mới</div>
    <div class="themdiachi-box-container">
      <div class="themdiachi-box">
        <form action="/user/themdiachi" method="post" class="formdiachi">
          <label for="hoten">Họ và tên</label>
          <input type="text" name="hoten" placeholder="Nhập họ và tên" />
          <label for="sdt">Số điện thoại</label>
          <input type="text" name="sdt" placeholder="Nhập số điện thoại" />
          <label for="tinhthanh">Địa chỉ</label>
          <select name="tinhthanh" id="">
            <option value="" class="maubac">--Chọn Tỉnh/Thành phố--</option>
            <option value="Quảng Trị">Quảng Trị</option>
            <option value="Đà Nẵng">Đà Nẵng</option>
            <option value="Huế">Huế</option>
          </select>
          <input type="text" name="quanhuyen" placeholder="Nhập Quận/Huyện" />
          <input
            type="text"
            id="secon"
            name="phuongxa"
            placeholder="Nhập Phường/Xã"
          />
          <input
            type="text"
            id="secon"
            name="sonha"
            placeholder="Nhập số nhà,tên đường"
          />
          <div class="loaidiachi">Loại địa chỉ</div>
          <div class="tuychondiachi">
            <label class="option">
              <input type="radio" name="loai" value="Nhà riêng" required />
              <span>Nhà riêng</span>
            </label>
            <label class="option">
              <input type="radio" name="loai" value="Công ty" />
              <span>Công ty</span>
            </label>
          </div>
          <div class="diachimacdinh">
            <input type="checkbox" name="macdinh" id="" />
            <div>Đặt làm địa chỉ mặc định</div>
          </div>
        </form>
      </div>
    </div>
    <div class="thaotac-diachi">
      <button class="btn-diachi-quaylai">Quay lại</button>
      <button class="luudiachi">Lưu lại</button>
    </div>
  </div>
</div>
<div class="container-user">
  <div class="hienthi-user">
    <div class="bangchon-user">
      <div class="bangchon-user-top">
        <div class="bangchon-user-ten">
          <img src="/img/actidem.avif" alt="" />
          <h1>{{user.hoten}}</h1>
        </div>
        <img src="/img/thevang.png" alt="" />
      </div>

      <div class="bangchon-user-bot">
        <a href="/user/thongtin" class="thanhchon-user">
          <i class="fa-solid fa-user"></i>
          <div>Thông tin cá nhân</div>
        </a>
        <a href="/user/diachinhanhang" class="thanhchon-user">
          <i class="fa-solid fa-location-dot"></i>
          <div>Địa chỉ nhận hàng</div>
        </a>
        <a href="/user/lichsudonhang" class="thanhchon-user">
          <i class="fa-solid fa-notes-medical"></i>
          <div>Lịch sử đơn hàng</div>
        </a>
      </div>
    </div>
    <div class="ctnthongtin-diachi">
      <div class="diachicc">
        <h1 class="title-diachi">Địa chỉ nhận hàng</h1>
        <div class="btnthemdiachi">+ Thêm địa chỉ</div>
      </div>
      <div class="thongtin-diachi">
        <div class="container-diachi">
          {{#unless user.diachi}}
            <div class="diachinull">
              <img
                src="https://prod-cdn.pharmacity.io/e-com/images/static-website/20240706155228-0-empty-order-history.svg"
                alt=""
              />
              <div>Không có địa chỉ nào</div>
              <div>
                Hãy thêm địa chỉ và tạo đơn hàng của bạn ngay hôm nay!
              </div>
              <button class="themdiachiphu">Thêm địa chỉ</button>
            </div>
          {{/unless}}
          {{#each user.diachi}}
            <div class="chuadiachi">
              <div>
                <div>
                  <span class="chuaten--diachi">{{this.hoten}}</span>
                  <span class="bac1">|</span>
                  {{this.sdt}}
                </div>
                <div>
                  {{this.sonha}},
                  {{this.phuongxa}},
                  {{this.quanhuyen}},
                  {{this.tinhthanh}}
                </div>
                <div>
                  <div class="dactrungdiachi">{{this.loai}}</div>
                  {{#if this.macdinh}}
                    <div class="dactrungmacdinh">Mặc định</div>
                  {{/if}}
                </div>
              </div>
              <div>
                <i class="fa-solid fa-trash trashdc"></i>
                <div class="chuasttdiachi">{{@index}}</div>
              </div>
            </div>
          {{/each}}
        </div>
      </div>
    </div>
  </div>
</div>
<div class="mauxanhtieuchuan"></div>

<script src="/js/diachinhanhang.js">
</script>