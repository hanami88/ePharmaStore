
  <style>
    .chat-container {
      display: flex;
      height: 100vh;
      width: 116rem;
      margin: 0 auto;
      background: white;
      margin-left: 19.4%;
    }
    .chat-sidebar {
      width: 36rem;
      background: white;
      border-right: 0.1rem solid #e4e6eb;
      display: flex;
      flex-direction: column;
    }

    .sidebar-header {
      padding: 1.6rem 2rem;
      display: flex;
      justify-content: space-between;
      align-items: center;
      border-bottom: 1px solid #e4e6eb;
    }

    .sidebar-header h2 {
      font-size: 24px;
      font-weight: 700;
      color: #1a51a2;
      display: flex;
      align-items: center;
      gap: 10px;
    }

    .btn-new-chat {
      width: 40px;
      height: 40px;
      border: none;
      background: #e7f3ff;
      color: #1a51a2;
      border-radius: 50%;
      cursor: pointer;
      font-size: 18px;
      transition: all 0.3s;
      display: flex;
      align-items: center;
      justify-content: center;
    }

    .btn-new-chat:hover {
      background: #1a51a2;
      color: white;
      transform: scale(1.1);
    }

    .sidebar-search {
      padding: 12px 16px;
      border-bottom: 1px solid #e4e6eb;
      display: flex;
      align-items: center;
      gap: 10px;
      background: #f0f2f5;
    }

    .sidebar-search i {
      color: #65676b;
      font-size: 16px;
    }

    .sidebar-search input {
      flex: 1;
      border: none;
      background: transparent;
      outline: none;
      font-size: 15px;
      color: #050505;
    }

    .sidebar-search input::placeholder {
      color: #65676b;
    }

    .conversations-list {
      flex: 1;
      overflow-y: auto;
    }

    .conversations-list::-webkit-scrollbar {
      width: 8px;
    }

    .conversations-list::-webkit-scrollbar-track {
      background: transparent;
    }

    .conversations-list::-webkit-scrollbar-thumb {
      background: #ccc;
      border-radius: 10px;
    }

    .conversations-list::-webkit-scrollbar-thumb:hover {
      background: #1a51a2;
    }

    .conversation-item {
      display: flex;
      align-items: center;
      padding: 12px 16px;
      cursor: pointer;
      transition: background 0.2s;
      gap: 12px;
      position: relative;
    }

    .conversation-item:hover {
      background: #f0f2f5;
    }

    .conversation-item.active {
      background: #e7f3ff;
      border-left: 4px solid #1a51a2;
    }

    .conversation-avatar {
      position: relative;
      flex-shrink: 0;
    }

    .conversation-avatar img {
      width: 56px;
      height: 56px;
      border-radius: 50%;
      object-fit: cover;
    }

    .online-badge {
      position: absolute;
      bottom: 2px;
      right: 2px;
      width: 14px;
      height: 14px;
      background: #31a24c;
      border: 2px solid white;
      border-radius: 50%;
    }

    .conversation-info {
      flex: 1;
      min-width: 0;
    }

    .conversation-header {
      display: flex;
      justify-content: space-between;
      align-items: center;
      margin-bottom: 4px;
    }

    .conversation-name {
      font-size: 15px;
      font-weight: 600;
      color: #050505;
      white-space: nowrap;
      overflow: hidden;
      text-overflow: ellipsis;
    }

    .conversation-time {
      font-size: 13px;
      color: #65676b;
      flex-shrink: 0;
      margin-left: 8px;
    }

    .conversation-preview {
      display: flex;
      align-items: center;
      justify-content: space-between;
      gap: 8px;
    }

    .last-message {
      font-size: 13px;
      color: #65676b;
      white-space: nowrap;
      overflow: hidden;
      text-overflow: ellipsis;
      flex: 1;
    }

    .conversation-item.active .last-message {
      color: #1a51a2;
      font-weight: 500;
    }

    .you-label {
      font-weight: 500;
      color: #65676b;
    }

    .unread-badge {
      background: #1a51a2;
      color: white;
      font-size: 12px;
      font-weight: 600;
      padding: 2px 8px;
      border-radius: 12px;
      flex-shrink: 0;
    }

    /* ==================== CHAT MAIN ==================== */
    .chat-main {
      flex: 1;
      display: flex;
      flex-direction: column;
      background: white;
    }

    .chat-box {
      display: flex !important;
      flex-direction: column;
      height: 100%;
    }

    .chat-header {
      display: flex;
      justify-content: space-between;
      align-items: center;
      padding: 12px 20px;
      border-bottom: 1px solid #e4e6eb;
      background: white;
      box-shadow: 0 1px 2px rgba(0, 0, 0, 0.05);
    }

    .chat-header-info {
      display: flex;
      align-items: center;
      gap: 12px;
    }

    .chat-avatar {
      width: 40px;
      height: 40px;
      border-radius: 50%;
      object-fit: cover;
    }

    .chat-header-info h4 {
      font-size: 16px;
      font-weight: 600;
      color: #050505;
      margin-bottom: 2px;
    }

    .chat-status {
      font-size: 12px;
      color: #31a24c;
    }

    .chat-header-actions {
      display: flex;
      gap: 8px;
    }

    .btn-action {
      width: 36px;
      height: 36px;
      border: none;
      background: #f0f2f5;
      color: #1a51a2;
      border-radius: 50%;
      cursor: pointer;
      font-size: 16px;
      transition: all 0.3s;
      display: flex;
      align-items: center;
      justify-content: center;
    }

    .btn-action:hover {
      background: #1a51a2;
      color: white;
      transform: scale(1.1);
    }

    /* ==================== CHAT BODY ==================== */
    .chat-body {
      flex: 1;
      overflow-y: auto;
      padding: 20px;
      background: #f0f2f5;
      display: flex;
      flex-direction: column;
      gap: 12px;
    }

    .chat-body::-webkit-scrollbar {
      width: 8px;
    }

    .chat-body::-webkit-scrollbar-track {
      background: transparent;
    }

    .chat-body::-webkit-scrollbar-thumb {
      background: #ccc;
      border-radius: 10px;
    }

    .chat-body::-webkit-scrollbar-thumb:hover {
      background: #1a51a2;
    }

    /* ==================== MESSAGES ==================== */
    .message-wrapper {
      display: flex;
      gap: 8px;
      max-width: 70%;
      animation: messageSlideIn 0.3s ease;
    }

    @keyframes messageSlideIn {
      from {
        opacity: 0;
        transform: translateY(10px);
      }
      to {
        opacity: 1;
        transform: translateY(0);
      }
    }

    .message-wrapper.other {
      align-self: flex-start;
    }

    .message-wrapper.me {
      align-self: flex-end;
      flex-direction: row-reverse;
    }

    .message-avatar {
      width: 28px;
      height: 28px;
      border-radius: 50%;
      object-fit: cover;
      flex-shrink: 0;
      align-self: flex-end;
    }

    .message-group {
      display: flex;
      flex-direction: column;
      gap: 4px;
    }

    /* ✅ Classes cho JS */
    .chat-message {
      display: inline-block;
    }

    .chat-message.bot-message .message-content,{
      background: white;
      padding: 10px 14px;
      border-radius: 18px;
      font-size: 15px;
      line-height: 1.4;
      color: #050505;
      box-shadow: 0 1px 2px rgba(0, 0, 0, 0.1);
    }
.bot-message{
    display: flex;
    flex-direction: column;
    align-items: start;
}
    .message-content {
  max-width: 70%;
  padding: 12px 16px;
  border-radius: 15px;
  background: white;
  box-shadow: 0 2px 5px rgba(0, 0, 0, 0.05);
}

.user-message .message-content {
  background: linear-gradient(
    135deg,
    rgb(26, 81, 162) 0%,
    rgb(18, 60, 120) 100%
  );
  color: white;

}
.user-message{
    display: flex;
    flex-direction: column;
    align-items: end;
}
    .message-content p {
        margin: 5px 0;
  font-size: 14px;
  line-height: 1.5;
    }

.user-message .message-time {
      font-size: 11px;
      color: #65676b;
      padding: 0 8px;
      align-self: flex-end;
    }

    .bot-message .message-time {
      align-self: flex-start;
    }

    /* ==================== TYPING INDICATOR ==================== */
    .typing-indicator {
      display: none;
      align-items: center;
      gap: 8px;
      padding: 0 20px 12px 20px;
      background: #f0f2f5;
    }

    .typing-indicator.active {
      display: flex;
    }

    .typing-avatar {
      width: 28px;
      height: 28px;
      border-radius: 50%;
      object-fit: cover;
    }

    .typing-dots {
      background: white;
      padding: 10px 16px;
      border-radius: 18px;
      display: flex;
      gap: 4px;
      box-shadow: 0 1px 2px rgba(0, 0, 0, 0.1);
    }

    .typing-dots span {
      width: 8px;
      height: 8px;
      background: #65676b;
      border-radius: 50%;
      animation: typingBounce 1.4s infinite;
    }

    .typing-dots span:nth-child(2) {
      animation-delay: 0.2s;
    }

    .typing-dots span:nth-child(3) {
      animation-delay: 0.4s;
    }

    @keyframes typingBounce {
      0%, 60%, 100% {
        transform: translateY(0);
      }
      30% {
        transform: translateY(-8px);
      }
    }

    /* ==================== CHAT FOOTER ==================== */
    .chat-footer {
      padding: 12px 20px;
      background: white;
      border-top: 1px solid #e4e6eb;
      display: flex;
      align-items: center;
      gap: 8px;
    }

    .chat-footer .btn-attachment,
    .chat-footer .btn-emoji {
      width: 36px;
      height: 36px;
      border: none;
      background: transparent;
      color: #1a51a2;
      border-radius: 50%;
      cursor: pointer;
      font-size: 20px;
      transition: all 0.3s;
      display: flex;
      align-items: center;
      justify-content: center;
    }

    .chat-footer .btn-attachment:hover,
    .chat-footer .btn-emoji:hover {
      background: #f0f2f5;
      transform: scale(1.1);
    }

    .chat-footer input#chatInput {
      flex: 1;
      padding: 10px 16px;
      border: none;
      background: #f0f2f5;
      border-radius: 20px;
      font-size: 15px;
      outline: none;
      transition: background 0.3s;
    }

    .chat-footer input#chatInput:focus {
      background: #e4e6eb;
    }

    .chat-footer button#chatSend {
      width: 36px;
      height: 36px;
      border: none;
      background: linear-gradient(135deg, #1a51a2 0%, #165fcd 100%);
      color: white;
      border-radius: 50%;
      cursor: pointer;
      font-size: 16px;
      transition: all 0.3s;
      display: flex;
      align-items: center;
      justify-content: center;
      box-shadow: 0 2px 8px rgba(26, 81, 162, 0.3);
    }

    .chat-footer button#chatSend:hover {
      transform: scale(1.1);
      box-shadow: 0 4px 12px rgba(26, 81, 162, 0.5);
    }

    .chat-footer button#chatSend:active {
      transform: scale(0.95);
    }
  </style>
  <div class="chat-container">
        <div class="chat-sidebar">
      <div class="sidebar-header">
        <h2><i class="fa-solid fa-message"></i> Tin nhắn</h2>
        <button class="btn-new-chat" title="Tạo tin nhắn mới">
          <i class="fa-solid fa-pen-to-square"></i>
        </button>
      </div>
      <div class="sidebar-search">
        <i class="fa-solid fa-magnifying-glass"></i>
        <input type="text" placeholder="Tìm kiếm trong tin nhắn...">
      </div>
      <div class="conversations-list" id="conversationsList">
        {{#each rooms}}
        <div class="conversation-item {{#if (equal @index 0)}}{{/if}}" data-room-id="{{this._id}}">
          <div class="conversation-avatar">
            <img src="/img/{{this.members.hinhanh}}" >
            {{#if this.isOnline}}
            <span class="online-badge"></span>
            {{/if}}
          </div>
          <div class="conversation-info">
            <div class="conversation-header">
              <h4 class="conversation-name">{{this.members.sdt}}</h4>
              <span class="conversation-time">{{formatDate this.lastMessage.createdAt}}</span>
            </div>
            <div class="conversation-preview">
              <p class="last-message">
                {{this.lastMessage.content}}
              </p>
              {{#if this.unreadCount}}
              <span class="unread-badge">{{this.unreadCount}}</span>
              {{/if}}
            </div>
          </div>
        </div>
        {{/each}}
      </div>
    </div>
        <div class="chat-main">
      <div class="chat-box">
                <div class="chat-header">
          <div class="chat-header-info">
            <img src="/img/anhmacdinh.jpeg" alt="Avatar" class="chat-avatar" id="currentChatAvatar">
            <div>
              <h4 id="currentChatName">{{this.members.sdt}}</h4>
              <span class="chat-status" id="currentChatStatus">Đang hoạt động</span>
            </div>
          </div>
          <div class="chat-header-actions">
            <button class="btn-action" title="Gọi thoại">
              <i class="fa-solid fa-phone"></i>
            </button>
            <button class="btn-action" title="Gọi video">
              <i class="fa-solid fa-video"></i>
            </button>
            <button class="btn-action" title="Thông tin">
              <i class="fa-solid fa-circle-info"></i>
            </button>
          </div>
        </div>
        <div class="chat-body" id="chatBody">
       {{#each messages}}
         {{#if (equalObjectId this.sender ../userId)}}
        <div class="chat-message user-message">
          <div class="message-content">
            <p>{{this.content}}</p>
          </div> 
          <span class="message-time">{{formatTime this.createdAt}}</span>
        </div>
        {{else}}
        <div class="chat-message bot-message">
          <div class="message-content">
            <p>{{this.content}}</p>
          </div>
          <span class="message-time">{{formatTime this.createdAt}}</span>
        </div>
        {{/if}}
      {{/each}}
        </div>
        <div class="typing-indicator" id="typingIndicator">
          <img src="/img/anhmacdinh.jpeg" alt="Avatar" class="typing-avatar">
          <div class="typing-dots">
            <span></span>
            <span></span>
            <span></span>
          </div>
        </div>
        <div class="chat-footer">
          <button class="btn-attachment" title="Đính kèm">
            <i class="fa-solid fa-paperclip"></i>
          </button>
          <button class="btn-emoji" title="Biểu tượng cảm xúc">
            <i class="fa-regular fa-face-smile"></i>
          </button>
          <input 
            type="text" 
            id="chatInput"
            placeholder="Aa"
            autocomplete="off"
          >
          <button id="chatSend" title="Gửi">
            <i class="fa-solid fa-paper-plane"></i>
          </button>
        </div>
      </div>
    </div>
  </div>
  <script src="https://cdn.jsdelivr.net/npm/axios/dist/axios.min.js"></script>
  <script src="/js/chat.js"></script>
