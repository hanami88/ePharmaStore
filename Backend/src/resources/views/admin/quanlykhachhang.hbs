<main class="main">
  <div class="header" style="margin-bottom: 0rem;">
    <h1 class="ql">顧客管理</h1>
  </div>
  <form method="POST" action="/admin/timkiemkhachhang" class="filter-form">
    <input type="text" name="keyword" placeholder="顧客名を入力..." value="{{filters.keyword}}"/>
    <select name="top" style="width: 10rem;">
      <option value="">-- 並び替え --</option>
      <option value="true" {{#if ( equal filters.top  'true')}}selected{{/if}}>利用総額</option>
    </select>
    <button type="submit" class="btn btn-blue" style="cursor: pointer;">検索</button>
  </form>
  <div class="table-wrapper">
    <table class="product-table">
      <thead>
        <tr>
          <th>No.</th>
          <th>画像</th>
          <th>電話番号</th>
          <th>氏名</th>
          <th>メール</th>
          <th>性別</th>
          <th>生年月日</th>
          <th>利用総額</th>
          <th>操作</th>
        </tr>
      </thead>
      <tbody>
        {{#each user}}
          {{#if (equal this.role "user")}}
            <tr>
              <td style="width: 1vw">{{@index}}</td>
              <td style="width: 2vw"><img
                  src="/img/{{this.hinhanh}}"
                  alt="Ảnh sản phẩm"
                  class="thumb"
                /></td>
              <td style="width: 6vw">{{this.sdt}}</td>
              <td style="width: 9vw">{{this.hoten}}</td>
              <td style="width: 10vw;">{{this.email}}</td>
              <td style="width: 5vw;">{{this.gioitinh}}</td>
              <td style="width: 6vw;">{{this.ngaysinh}}</td>
              <td style="width: 7vw;">{{formatNumber this.tongtiendadung}} 円</td>
              <td style="width: 3vw;">
                <div class="hanhdong1">
                  <a
                    href="/admin/{{this._id}}/chitietkhachhang"
                    class="btn btn-blue"
                  >詳細</a>
                </div>
              </td>
            </tr>
          {{/if}}
        {{/each}}
      </tbody>
    </table>
  </div>
</main>
<form method="POST" style="display:inline" class="formxoa">
</form>
<div class="xoasp">
  <div class="thongbaochacchan tbcc">
    <h1>顧客削除</h1>
    <div>この顧客を削除してもよろしいですか？</div>
    <button class="thongbao-quaylai qlai">キャンセル</button>
    <button class="thongbao-tieptuc tt">削除</button>
  </div>
</div>

<script src="/js/xoasanpham-qlsp.js"></script>