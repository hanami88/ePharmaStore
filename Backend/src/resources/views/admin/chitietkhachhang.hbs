<main class="main" style="background-color: rgb(245, 245, 245)">
  <div class="header" style="margin-bottom: 0rem; width: 27rem ; height:6rem;">
    <a style="color: black;" href="/admin/quanlykhachhang">
      <i
        class="fa-solid fa-arrow-left"
        style="font-size: 3.5rem; cursor: pointer"
      ></i>
    </a>
    <h2 style="margin-top: 2rem;">顧客詳細</h2>
  </div>
  <div class="hienthi-user">
    <div class="ctnthongtin-user">
      <div class="user-admin">
        <a href="/admin/chitietkhachhang" class="title-thongtincanhan">個人情報</a>
        <a href="/admin/diachinhanhang" class="title-thongtincanhan">配送先住所</a>
        <a href="/admin/lichsudonhang" class="title-thongtincanhan">注文履歴</a>
      </div>
      <div class="thongtin-user">
        <form
          method="post"
          action="/admin/{{user._id}}/capnhatthongtin"
          class="container-thongtinuser"
          enctype="multipart/form-data"
        >
          <div class="anhdaidien">プロフィール画像</div>
          <div class="anhdaidien-cc">
            <img
              class="anhdaidienmoi"
              id="preview"
              src="/img/{{user.hinhanh}}"
            />
            <input
              class="file"
              id="hinhanh"
              accept="image/*"
              type="file"
              name="hinhanh"
              style="display: none"
            />
            <div class="daidienoi">
              <label for="hinhanh" class="btn-capnhatanhmoi">新しい画像を更新</label>
              <div>最大ファイルサイズ：5 MB</div>
              <div>形式：.JPEG、.PNG</div>
            </div>
          </div>
          <div class="dienthongtin">
            <div class="container-dienthongtin">
              <label for="hoten" style="font-size: 1.6rem">氏名</label>
              <input
                type="text"
                name="hoten"
                id="hoten"
                placeholder="氏名"
                value="{{user.hoten}}"
              />
              <label for="ngaysinh" style="font-size: 1.6rem">生年月日</label>
              <input
                type="date"
                name="ngaysinh"
                id="ngaysinh"
                value="{{user.ngaysinh}}"
              />
              <label for="gioitinh" style="font-size: 1.6rem">性別</label>
              <select
                class="gioitinhchon"
                name="gioitinh"
                id="gioitinh"
                style="width: 93.5%; font-weight: 600; border: 0.1rem solid #9e9e9e; font-size: 1.6rem; padding-left: 1.5rem;"
              >
                <option value="" disabled {{#unless user.gioitinh}}selected{{/unless}}>性別を選択</option>
                <option value="nam" {{#if (equal user.gioitinh "nam")}}selected{{/if}}>男性</option>
                <option value="nu" {{#if (equal user.gioitinh "nu")}}selected{{/if}}>女性</option>
                <option value="khac" {{#if (equal user.gioitinh "khac")}}selected{{/if}}>その他</option>
              </select>
            </div>
            <div class="thongtinphu">
              <div>電話番号</div>
              <div>{{user.sdt}}</div>
              <div>
                <div>
                  <div>メールアドレス</div>
                  <div>{{user.email}}</div>
                </div>
                <a href="/admin/{{user._id}}/trangdoiemail">更新</a>
              </div>
              <div>
                <div>パスワード</div>
                <a href="/admin/{{user._id}}/trangmatkhau">パスワード変更</a>
              </div>
            </div>
          </div>
          <div class="chuabtnthaydoi">
            <button type="submit" class="btn-thaydoi">変更を保存</button>
          </div>
        </form>
      </div>
    </div>
  </div>
</main>
<script>const fileInput = document.querySelector(".file");
  document.getElementById("hinhanh").addEventListener("change", function (event)
  { const file = event.target.files[0]; const preview =
  document.getElementById("preview"); if (file) { const reader = new
  FileReader(); reader.onload = function (e) { preview.src = e.target.result;
  preview.style.display = "block"; }; reader.readAsDataURL(file); } else {
  preview.src = "#"; preview.style.display = "none"; } });
</script>